{
  "name": "taskiify",
  "version": "1.0.0",
  "description": "Taskify with double 'i'",
  "main": "app.ts",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "test": "npm run build:ts && tsc -p test/tsconfig.test.json && cross-env TS_NODE_FILES=true tap --ts test/**/*.test.ts",
    "start": "npm run build:ts && fastify start -l info dist/app.js",
    "build:ts": "tsc",
    "dev": "tsc && concurrently -k -p \"[{name}]\" -n \"TypeScript,App\" -c \"yellow.bold,cyan.bold\" \"tsc -w\" \"fastify start --ignore-watch=.ts$ -w -l info -P dist/app.js\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/awiejacha/taskiify.git"
  },
  "keywords": [],
  "author": "Adrian Wiejacha <adrian.wiejacha@gmail.com",
  "license": "SEE LICENSE IN LICENSE",
  "bugs": {
    "url": "https://github.com/awiejacha/taskiify/issues"
  },
  "homepage": "https://github.com/awiejacha/taskiify#readme",
  "dependencies": {
    "fastify": "^3.18.1",
    "fastify-autoload": "^3.8.0",
    "fastify-cli": "^2.13.0",
    "fastify-helmet": "^5.3.1",
    "fastify-plugin": "^3.0.0",
    "knex": "^0.95.6",
    "mysql2": "^2.2.5",
    "nanoid": "^3.1.23"
  },
  "devDependencies": {
    "@types/node": "^15.12.5",
    "@types/tap": "^15.0.4",
    "concurrently": "^6.2.0",
    "cross-env": "^7.0.3",
    "fastify-tsconfig": "^1.0.1",
    "tap": "^15.0.9",
    "ts-node": "^10.0.0",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.11.2",
    "typescript": "^4.2.4"
  }
}
